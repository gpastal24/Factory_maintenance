<MachineWindow>:
    name: "main"
    on_pre_enter:
        self.add_buttons()
    FloatLayout:
        cols:1
        FloatLayout:
            Button:

                pos_hint:{"x":0.85,"y":0.9}
                size_hint: 0.1, 0.1
                font_size: 15
                text: "Προσθέστε μηχάνημα"
                on_press:
                    root.add_machine()


            Button:
                pos_hint:{"x":0.85,"y":0.1}
                size_hint: 0.1, 0.1
                font_size: 15
                text: "Έξοδος"
                on_press:
                    app.stop()


<AddMachine>
    name: "machine_add"
    namee: namee
    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height

            Label:
                text: "Add a new machine"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False
                font_size: 15

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.1, 0.1
            font_size: 15
            text: "Πίσω"
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        Button:
            pos_hint:{"x":0.3,"y":0.45}
            size_hint: 0.1, 0.1
            font_size: 15
            text: "Καταχώριση"
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

<AddPart>
    name: "part_add"
    namee: namee
    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height

            Label:
                text: "Add a new part !"
                size_hint: 0.2, 0.2
                pos_hint: {"x":0.5, "top":1}
                font_size: 15

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: 15

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.1, 0.12
                id: namee
                multiline: False
                font_size: 15

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Πίσω"
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        Button:
            pos_hint:{"x":0.3,"y":0.45}
            size_hint: 0.2, 0.1
            font_size: 15
            text: "Καταχώριση"
            on_release:
                root.manager.transition.direction = "left"
                root.submit()



<PartWindow>
    name: "select"
    on_pre_enter:
        root.refresh()
        self.add_buttons()
    FloatLayout:
        cols:1
        size: root.width , root.height/2

        FloatLayout:
            size : root.width, root.height

            Button:

                pos_hint:{"x":0.85,"y":0.9}
                size_hint: 0.1, 0.1
                font_size: 15
                text: "Προσθέστε part"
                on_press:
                    root.add_part()
            Button:
                pos_hint:{"x":0.8,"y":0.0}
                size_hint: 0.2, 0.1
                text: "Πίσω"
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.go_back()

<PartInfo>:
    name: 'Parts'
    on_enter:
        self.load_info()

    FloatLayout:
        cols:1
        size: root.width , root.height/2

        FloatLayout:
            size : root.width, root.height


            Label:
                text: root.name2
                font_size: 15
                pos_hint: {"x":0.2, "top":0.9}
                size_hint: 0.35, 0.15
            Label:
                text: root.last_main
                font_size: 15
                pos_hint: {"x":0.4, "top":0.7}
                size_hint: 0.15, 0.15
            Label:
                text: root.next_main
                font_size: 15
                pos_hint: {"x":0.4, "top":0.5}
                size_hint: 0.35, 0.15
            Label:
                text: root.comms
                font_size: 15
                pos_hint: {"x":0.4, "top":0.2}
                size_hint: 0.35, 0.15
            Button:
                pos_hint:{"x":0.8,"y":0.0}
                size_hint: 0.2, 0.1
                text: "Πίσω"
                font_size: 15
                on_release:
                    root.manager.transition.direction = "left"
                    root.go_back()
